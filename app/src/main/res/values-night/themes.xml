<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCalc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="MyOwnTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- App bar color -->
        <item name="colorPrimary">@color/app_bar_color_dark</item>
        <item name="colorAccent">@color/hexagon</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/status_bar_color_dark</item>

    </style>

    <style name="Review" parent="Theme.MaterialComponents.Light">
        <item name="backgroundColor">@color/bg</item>
        <item name="background">@color/bg</item>
        <item name="colorPrimary">@color/dark_bg</item>
        <item name="colorPrimaryDark">@color/dark_status_bg</item>

        <item name="android:buttonTint">@color/hexagon</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundColor">@color/hexagon</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>
</resources>